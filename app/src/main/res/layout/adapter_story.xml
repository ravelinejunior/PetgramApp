<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_StoriesAdapter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="2dp"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="@color/vermelhoGold"
        android:src="@drawable/ic_person_black_preto"
        android:layout_marginTop="5dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoVista_StoriesAdapter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:civ_border_color="@color/cinzaClaro"
        android:src="@drawable/ic_person_alterar"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/nomeUsuario_StoriesAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/textColor_padrao"
        android:gravity="center"
        android:textSize="12sp"
        android:textAlignment="center"
        />

</LinearLayout>