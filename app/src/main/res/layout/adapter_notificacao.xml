<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagemPerfil_notificacaoAdapter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imagemPerfil_notificacaoAdapter"
        android:layout_toStartOf="@id/imagemPostada_notificacaoAdapter"
        >

        <TextView
            android:id="@+id/nomeUsuario_NotificacaoAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textStyle="bold"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comentario_NotificacaoAdapter"
            android:textColor="@color/textColor_padrao"
            android:maxLines="5"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imagemPostada_notificacaoAdapter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>