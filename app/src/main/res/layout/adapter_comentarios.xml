<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagem_fotoUsuarioComentou_AdapterComentario"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:elevation="5dp"
            />
    <LinearLayout
        android:id="@+id/layoutLinear_principal_Comentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/imagem_fotoUsuarioComentou_AdapterComentario"
        android:layout_alignTop="@id/imagem_fotoUsuarioComentou_AdapterComentario"
        android:orientation="vertical">

      <TextView
          android:id="@+id/nomeUsuarioComentou_AdapterComentario"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:text="@string/nome_usuario_digitado"
          android:textColor="#1D1F20"
          android:padding="5dp"
          />

        <TextView
            android:id="@+id/texto_comentarioFeito_AdapterComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_usuario_digitado"
            android:padding="5dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider_AdapterComentario"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#454849"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/layoutLinear_principal_Comentarios"
        />


</RelativeLayout>