<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoUsuario_enviado_Chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/doggirl"
          />

        <TextView
            android:id="@+id/mensagemEnviada_Mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/fotoUsuario_enviado_Chat"
            android:background="@drawable/shape_botao_perfil_fragment"
            android:maxWidth="300dp"
            android:padding="12dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:text="@string/encotre_mais_amantes_de_pets_acredite_somos_um_numero_enorme_de_pessoas_que_amam_os_grand_es_e_dos_baixinhos"
            android:textColor="@color/branco"
            android:textIsSelectable="true"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>