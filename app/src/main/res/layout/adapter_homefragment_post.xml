<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout_horizontal_adapterHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagem_perfilUsuario_HomeAdapter_id"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/logodogs"/>

        <TextView
            android:id="@+id/nome_perfilUsuario_HomeAdapter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Teste de nome de usuario"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imagemPostada_HomeAdapter_id"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/ic_nearme_preto"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/descricao_HomeAdapter_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Descrição teste Descrição teste Descrição teste
         Descrição teste Descrição teste"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cinza"
        android:orientation="horizontal">
<!--
        <ImageView
            android:id="@+id/likeButton_HomeAdapter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_likebutton_oco"
            android:contentDescription="@string/comentario"/>-->

        <com.like.LikeButton
            android:id="@+id/likeButton_HomeAdapter_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            app:circle_end_color="@color/vermelhocomum"
            app:circle_start_color="@color/vermelho"
            app:icon_size="30dp"
            app:icon_type="heart">

        </com.like.LikeButton>

        <ImageView
            android:id="@+id/mensagemButton_HomeAdapter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/likeButton_HomeAdapter_id"
            android:src="@drawable/ic_comentario"
            android:contentDescription="@string/comentario" />

        <ImageView
            android:id="@+id/salvarButton_HomeAdapter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_foguinho"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/quantidadeLikes_HomeAdapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/preto"
        android:text="@string/_1_like" />

    <TextView
        android:id="@+id/publicadaPor_HomeAdapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/ver_todos_os_10_comentarios" />

    <TextView
        android:id="@+id/verTodosComentarios_HomeAdapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="@string/ver_todos_os_10_comentarios" />


</LinearLayout>