<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PostagemCamera">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_PostagemCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Azulnovo"
        app:title="Postar PetFoto"
        app:titleTextColor="@color/branco"
    >

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imagemSelecionada_PostagemCamera"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="fitXY"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/descri_o"
            android:textColorHint="@color/preto"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descricao_PostagemCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</LinearLayout>