<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Azulnovo</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/cinzaClaro</item>
    </style>

    <style name="AppThemeComentarioActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cinzaClaro</item>
        <item name="colorPrimaryDark">@color/textColor_padrao</item>
        <item name="colorAccent">@color/vermelhocomum</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema para Tela de login -->
    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/azulescuro</item>
        <item name="colorPrimaryDark">@color/cinzaClaro</item>
        <item name="colorAccent">@color/preto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
